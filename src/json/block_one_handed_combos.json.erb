{
    "title": "Force the user to make key combination with two hands (rev 2)",
    "rules": [

        <% ["shift", "control", "option", "command"].each_with_index do |mod, mod_index| %>
        <%= mod_index == 0 ? '' : ',' %>

        {
            "description": "Block left-handed <%= mod %> + left-handed key (rev 2)",
            "manipulators": [

                <% ["grave_accent_and_tilde", "1", "2", "3", "4", "5", "q", "w", "e", "r", "t", "a", "s", "d", "f", "g", "z", "x", "c", "v"].each_with_index do |key, key_index| %>
                    <%= key_index == 0 ? '' : ',' %>

                    {
                        "type": "basic",
                        "from": <%= from(key, ["left_" + mod], ["any"]) %>,
                        "to": <%= to([[ "vk_none" ]]) %>
                    }

                <% end %>
            ]
        },
        {
            "description": "Block right-handed <%= mod %> + right-handed key (rev 2)",
            "manipulators": [

                <% ["7", "8", "9", "0", "hyphen", "equal_sign", "y", "u", "i", "o", "p", "open_bracket", "close_bracket", "h", "j", "k", "l", "semicolon", "quote", "backslash", "n", "m", "comma", "period", "slash"].each_with_index do |key, key_index| %>
                    <%= key_index == 0 ? '' : ',' %>

                    {
                        "type": "basic",
                        "from": <%= from(key, ["right_" + mod], ["any"]) %>,
                        "to": <%= to([[ "vk_none" ]]) %>
                    }

                <% end %>
            ]
        }

        <% end %>

    ]
}
