{
  "title": "Left control to shift (useful for fixing typos when caps lock is remapped to control)",
  "rules": [
    {
      "description": "Ctrl-6 to ^",
      "manipulators": [
    {
        "type": "basic",
        "from": {
            "key_code": "6",
            "modifiers": {
            "mandatory": [ "left_control" ]
            }
        },
        "to": [
            {
                "key_code": "6",
                "modifiers": [ "shift" ]
            }
        ]
    }
      ]
    },


